<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Ingresar.IngresarActivity"
    tools:showIn="@layout/activity_ingresar"
    android:fillViewport="false">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Ingresar.IngresarActivity"
    tools:showIn="@layout/activity_ingresar">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Código Persona:"
        android:paddingLeft="4dp"
        android:id="@+id/textViewCodigoPer"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"

        android:textColor="#000000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCodigoPer"
        android:hint="Ingrese el código"
        android:layout_below="@+id/textViewCodigoPer"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cédula:"
        android:paddingLeft="4dp"
        android:id="@+id/textViewCedula"

        android:layout_below="@+id/editTextCodigoPer"
        android:layout_alignParentStart="true"
        android:elegantTextHeight="false"
        android:textColor="#000000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCedula"
        android:maxLength="10"
        android:inputType="number"
        android:hint="Ingrese 10 números"
        android:layout_below="@+id/textViewCedula"
        android:layout_alignParentStart="true" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="20"
        android:id="@+id/editTextNombre"
        android:hint="Ej. Daniel"
        android:layout_below="@+id/textViewNombre"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Curso:"
        android:paddingLeft="4dp"
        android:id="@+id/textViewCursos"
        android:layout_below="@+id/editTextApellido"
        android:layout_alignParentStart="true"
        android:elegantTextHeight="true"
        android:textColor="#000000" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerCursos"
        android:layout_below="@+id/editTextApellido"
        android:layout_toEndOf="@+id/textViewApellido"
        android:layout_marginBottom="125dp"
        android:layout_marginTop="4dp" />

    <EditText
        android:layout_width="match_parent"
        android:hint="Ej. Granda"
        android:layout_height="wrap_content"
        android:id="@+id/editTextApellido"
        android:maxLength="20"
        android:layout_below="@+id/textViewApellido"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Apellido:"
        android:paddingLeft="4dp"
        android:id="@+id/textViewApellido"
        android:layout_below="@+id/editTextNombre"
        android:layout_alignParentStart="true"
        android:elegantTextHeight="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre:"
        android:paddingLeft="4dp"
        android:id="@+id/textViewNombre"
        android:layout_below="@+id/editTextCedula"
        android:layout_alignParentStart="true"
        android:elegantTextHeight="true"
        android:textColor="#000000" />


</RelativeLayout>
</ScrollView>