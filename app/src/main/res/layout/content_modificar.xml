<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Modificar.ModificarActivity"
    tools:showIn="@layout/activity_modificar">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Modificar.ModificarActivity"
    tools:showIn="@layout/activity_modificar">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Codigo Persona:"
        android:paddingLeft="4dp"
        android:id="@+id/textViewCedula"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCodigoPerM"
        android:layout_below="@+id/textViewCedula"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnComprobarM" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/btnComprobarM"
        android:src="@android:drawable/ic_menu_search"
        android:background="@color/accent_material_light"
        android:layout_alignEnd="@+id/editTextCedulaM"
        android:layout_alignTop="@+id/editTextCodigoPerM"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CÃ©dula:"
        android:paddingLeft="4dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/editTextCodigoPerM"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCedulaM"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre:"
        android:paddingLeft="4dp"
        android:id="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextCedulaM"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNombreM"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Apellido:"
        android:paddingLeft="4dp"
        android:id="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextNombreM"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextApellidoM"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerCursosM"
        android:spinnerMode="dropdown"
        android:layout_alignTop="@+id/textView5"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Curso:"
        android:paddingLeft="4dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/editTextApellidoM"
        android:layout_alignParentStart="true" />


</RelativeLayout>
</ScrollView>